<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/system_settings_title"
    settings:keywords="@string/keywords_calo" >

    <PreferenceCategory
        android:key="status_bar_general_category"
        android:title="@string/status_bar_screen_title" >
        <SwitchPreference
            android:key="status_bar_native_battery_percentage"
            android:summary="@string/status_bar_native_battery_percentage_summary"
            android:title="@string/status_bar_native_battery_percentage_title" />
        <SwitchPreference
            android:key="status_bar_brightness_control"
            android:summary="@string/status_bar_brightness_control_summary"
            android:title="@string/status_bar_brightness_control_title" />
    <PreferenceScreen
            android:fragment="com.android.settings.simpleaosp.StatusBarClockStyle"
            android:key="clock_style_pref"
	    android:summary="@string/status_bar_clock_summary"
            android:title="@string/status_bar_clock" />
    </PreferenceCategory>

        <com.android.settings.cyanogenmod.SystemSettingSwitchPreference
            android:key="status_bar_notif_count"
            android:title="@string/status_bar_notif_count_title"
            android:summary="@string/status_bar_notif_count_summary"
            android:defaultValue="false" />

        <!-- Notification drawer -->
    <PreferenceScreen
                android:id="@+id/notification_drawer_settings"
                android:title="@string/notification_drawer_title"
                android:fragment="com.android.settings.cyanogenmod.NotificationDrawerSettings" />

            <PreferenceScreen
        android:fragment="com.android.settings.rastapop.StatusBarWeather"
        android:key="status_bar_weather"
        android:title="@string/weather_clock_title" 
	android:summary="@string/weather_clock_summary" />
            <PreferenceScreen
                android:key="lock_screen_weather_settings"
                android:title="@string/lock_screen_weather_settings_title"
                android:fragment="com.android.settings.cyanogenmod.LockScreenWeatherSettings" />

        <PreferenceScreen
            android:key="navigation_bar"
            android:fragment="com.android.settings.cyanogenmod.NavBar"
	    android:summary="@string/navigation_bar_settings_summary"
            android:title="@string/navigation_bar_buttons" />

	<com.android.settings.cyanogenmod.SystemSettingSwitchPreference
            android:key="navigation_bar_menu_arrow_keys"
            android:title="@string/navigation_bar_arrow_keys_title"
            android:summary="@string/navigation_bar_arrow_keys_summary"
            android:defaultValue="false" />

     <PreferenceCategory
            android:key="category_network_traffic"
            android:title="@string/network_traffic_title">
        <ListPreference
                android:key="network_traffic_state"
                android:title="@string/show_network_traffic_state"
                android:entries="@array/show_network_traffic_state_entries"
                android:entryValues="@array/show_network_traffic_state_values"
                android:persistent="false" />
        <ListPreference
                android:key="network_traffic_unit"
                android:title="@string/show_network_traffic_unit"
                android:entries="@array/show_network_traffic_unit_entries"
                android:entryValues="@array/show_network_traffic_unit_values"
                android:persistent="false" />
        <ListPreference
                android:key="network_traffic_period"
                android:title="@string/show_network_traffic_frequency"
                android:entries="@array/show_network_traffic_frequency_entries"
                android:entryValues="@array/show_network_traffic_frequency_values"
                android:persistent="false" />
    </PreferenceCategory>

	<PreferenceCategory
	    android:key="recents_panel"
	    android:title="@string/recents_panel_settings" >
        <SwitchPreference
            android:key="show_clear_all_recents"
            android:title="@string/show_clear_all_recents_button_title"
            android:summary="@string/show_clear_all_recents_button_summary"
            android:defaultValue="true" />
        <ListPreference
            android:key="recents_clear_all_location"
            android:title="@string/recents_clear_all_location_title"
            android:entries="@array/recents_clear_all_location_entries"
            android:entryValues="@array/recents_clear_all_location_values"
            android:defaultValue="0"
            android:dependency="show_clear_all_recents" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="navigation_bar_general_category"
        android:title="@string/navigation_bar_screen_title" >
        <ListPreference
            android:key="navigation_bar_height"
            android:dialogTitle="@string/navigation_bar_height"
            android:title="@string/navigation_bar_height"
            android:entries="@array/navigation_bar_height_entries"
            android:entryValues="@array/navigation_bar_height_values"
            android:defaultValue="48"
            android:persistent="false" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="volume_rocker_general_category"
        android:title="@string/volume_rocker_screen_title" >
        <SwitchPreference
            android:key="volume_rocker_wake"
            android:summary="@string/volume_rocker_wake_summary"
            android:title="@string/volume_rocker_wake_title" />
        <SwitchPreference
            android:key="volume_key_adjust_sound"
            android:summary="@string/volume_key_adjust_sound_summary"
            android:title="@string/volume_key_adjust_sound_title" />
        <ListPreference
            android:dialogTitle="@string/volume_key_cursor_control_title"
            android:entries="@array/volume_key_cursor_control_entries"
            android:entryValues="@array/volume_key_cursor_control_values"
            android:key="volume_key_cursor_control"
            android:persistent="false"
            android:title="@string/volume_key_cursor_control_title" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="system_settings_general_category"
        android:title="@string/system_settings_screen_title" >
        <PreferenceScreen
                android:id="@+id/app_ops_settings"
                android:title="@string/app_ops_settings"
                android:fragment="com.android.settings.applications.AppOpsSummary" />
        <PreferenceScreen
                android:key="hfm_settings"
                android:title="@string/hfm_pref_screen_title"
                android:fragment="com.android.settings.rastapop.hfm.HfmSettings" />
        <SwitchPreference
            android:key="advanced_reboot"
            android:summary="@string/advanced_reboot_summary"
            android:title="@string/advanced_reboot_title" />
        <SwitchPreference
            android:key="kill_app_longpress_back"
            android:title="@string/kill_app_longpress_back"
            android:summary="@string/kill_app_longpress_back_summary"/>
    </PreferenceCategory>
</PreferenceScreen>
